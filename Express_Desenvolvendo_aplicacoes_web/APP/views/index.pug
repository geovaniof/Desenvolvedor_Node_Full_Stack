extends app.pug
block titulo
    title Lista de Clientes    

block conteudo
    h1 Lista de Clientes
    table.table
        thead
            tr
                th(scope='col') ID 
                th(scope='col') Nome
                th(scope='col') Email 
                th(scope='col') Ações
        tbody
            for client, indice in clients
                tr
                    th(scope='row') #{client.id}
                    td 
                        a(href=`/clients/${client.id}`) #{client.nome}
                    td #{client.email}
                    td
                        a(href=`/clients/${client.id}/edit`).btn.btn-primary Editar
                        form(action=`/clients/${client.id}?_method=DELETE` method= 'POST' style='display: inline')
                            button(type='submit' value='submit' onclick='return confirm("Tem certeza que deseja apagar ?")').btn.btn-danger Exclir

    a(href="/clients/create").btn.btn-success Novo Cliente
